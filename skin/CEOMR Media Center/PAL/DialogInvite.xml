<window id="102">
  <defaultcontrol>30</defaultcontrol>

   <animation effect="fade" time="200">WindowOpen</animation> 
   <animation effect="fade" time="200">WindowClose</animation>
  
  <controls>
    <control type="image" id="1">
      <description>Dialog Background</description>
      <posx>137</posx>
      <posy>197</posy>
      <width>410</width>
      <height>270</height>
      <texture>dialog-invite.png</texture>
    </control>

    <control type="label" id="1">
      <description>Send Invitation Heading</description>
      <posx>190</posx>
      <posy>201</posy>
      <label>15054</label>
      <font>font14</font>
      <include>textcolorwhite</include>
    </control>

    <control type="label" id="1">
      <description>Choose Game</description>
      <posx>190</posx>
      <posy>240</posy>
      <label>15055</label>
      <font>font12</font>
      <include>textcolorwhite</include>
    </control>

    <control type="spincontrol" id="30">
      <description>Games Spin Control</description>
      <font>font13</font>
      <posx>190</posx>
      <posy>270</posy>
      <reverse>yes</reverse>
      <align>left</align>
      <onleft>30</onleft>
      <onright>30</onright>
      <onup>10</onup>
      <ondown>20</ondown>
      <textoffsetx>0</textoffsetx>
    </control>

    <control type="label" id="4">
      <description>Enter Message</description>
      <posx>190</posx>
      <posy>300</posy>
      <label>15056</label>
      <font>font12</font>
      <include>textcolorwhite</include>
    </control>

    <control type="button" id="20">
      <description>Message Field</description>
      <posx>190</posx>
      <posy>330</posy>
      <width>330</width>
      <label>15060</label>
      <font>font13</font>
      <include>textcolorlightgrey</include>
      <texturefocus>list-focus.png</texturefocus>
      <texturenofocus>list-nofocus.png</texturenofocus>
      <onleft>20</onleft>
      <onright>20</onright>
      <onup>30</onup>
      <ondown>10</ondown>
    </control>

    <control type="button" id="10">
      <description>Send button</description>
      <posx>360</posx>
      <posy>385</posy>
      <width>75</width>
      <height>35</height>
      <label>15057</label>
      <align>center</align>
      <onleft>10</onleft>
      <onright>11</onright>
      <onup>20</onup>
      <ondown>30</ondown>
    </control>

    <control type="button" id="11">
      <description>Cancel button</description>
      <posx>445</posx>
      <posy>385</posy>
      <width>75</width>
      <height>35</height>
      <label>222</label>
      <align>center</align>
      <onleft>10</onleft>
      <onright>11</onright>
      <onup>20</onup>
      <ondown>30</ondown>
    </control>

  </controls>

</window>

