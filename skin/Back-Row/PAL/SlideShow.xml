<window>
	<id>2007</id>
	<defaultcontrol>2</defaultcontrol>
	<controls>

	<!-- Picture Infos -->
	<control>
		<description>Bar Image</description>
		<type>image</type>
		<posx>-10</posx>
		<posy>40</posy>
		<width>740</width>
		<height>65</height>
		<texture>osd_menu_bg.png</texture>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowCodec</visible>
	</control>

	<control>
		<description>Row 1 Label</description>
		<type>label</type>
		<id>10</id>
		<posx>70</posx>
		<posy>50</posy>
		<label>-</label>
		<align>left</align>
		<font>font12</font>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowCodec</visible>
	</control>

	<control>
		<description>Row 2 Label</description>
		<type>label</type>
		<id>11</id>
		<posx>70</posx>
		<posy>75</posy>
		<label>-</label>
		<align>left</align>
		<font>font12</font>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowCodec</visible>
	</control>

	<control>
		<description>Row 2 Extra Label</description>
		<type>label</type>
		<id>12</id>
		<posx>250</posx>
		<posy>75</posy>
		<label>-</label>
		<align>left</align>
		<font>font12</font>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowCodec</visible>
	</control>

	<control>
		<description>Pause Image</description>
		<type>image</type>
		<id>13</id>
		<align>right</align>
		<posx>580</posx>
		<posy>25</posy>
		<height>64</height>
		<width>128</width>
		<visible>no</visible>
		<texture>video-pause.png</texture>
		<colorkey>0</colorkey>
	</control>

	<!-- Media Infos -->
	<control>
		<description>Media Info Background Image</description>
		<type>image</type>
		<posx>-10</posx>
		<posy>455</posy>
		<width>740</width>
		<height>100</height>
		<texture>osd_menu_bg.png</texture>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo</visible>
	</control>

	<control>
		<description>Cover Image</description>
		<type>image</type>
		<posx>75</posx>
		<posy>455</posy>
		<width>100</width>
		<height>100</height>
		<info>MusicPlayer.Cover</info>
		<aspectratio>keep</aspectratio>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasAudio</visible>
	</control>

	<control>
		<description>Artist Label</description>
		<type>label</type>
		<width>445</width>
		<posx>180</posx>
		<posy>458</posy>
		<align>left</align>
		<font>special12</font>
		<info>MusicPlayer.Artist</info>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasAudio</visible>
	</control>

	<control>
		<description>Title Label</description>
		<type>label</type>
		<width>400</width>
		<posx>180</posx>
		<posy>479</posy>
		<align>left</align>
		<font>special13</font>
		<info>MusicPlayer.Title</info>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasAudio</visible>
	</control>

	<control>
		<description>Album Label</description>
		<type>label</type>
		<width>430</width>
		<posx>180</posx>
		<posy>507</posy>
		<align>left</align>
		<font>font10</font>
		<info>MusicPlayer.Album</info>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasAudio</visible>
	</control>

	<control>
		<description>Time Label</description>
		<type>label</type>
		<width>430</width>
		<posx>180</posx>
		<posy>528</posy>
		<align>left</align>
		<font>font10</font>
		<label>$INFO[musicplayer.Time] / $INFO[MusicPlayer.TimeRemaining] / $INFO[musicplayer.Duration]</label>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo</visible>
	</control>

	<control>
		<description>Playlist Label</description>
		<type>label</type>
		<width>200</width>
		<posx>660</posx>
		<posy>528</posy>
		<align>right</align>
		<font>font10</font>
		<label>$LOCALIZE[435] $INFO[musicplayer.Playlistposition] / $INFO[musicplayer.Playlistlength]</label>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasAudio</visible>
	</control>

	<control>
		<description>Time Label</description>
		<type>label</type>
		<width>200</width>
		<posx>660</posx>
		<posy>458</posy>
		<align>right</align>
		<font>special13</font>
		<label>$INFO[System.Time]</label>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo</visible>
	</control>

	<control>
		<description>Volume Label</description>
		<type>label</type>
		<width>200</width>
		<posx>660</posx>
		<posy>479</posy>
		<align>right</align>
		<font>special13</font>
		<label>$INFO[Player.Volume]</label>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo</visible>
	</control>

	<control>
		<description>Progressbar</description>
		<type>progress</type>
		<id>23</id>
		<posx>180</posx>
		<posy>548</posy>
		<width>480</width>
		<height>4</height>
		<info>Player.Progress</info>
		<texturebg>progress_back.png</texturebg>
		<lefttexture>progress_left.png</lefttexture>
		<midtexture>progress_mid-blue2.png</midtexture>
		<righttexture>progress_right.png</righttexture>
		<overlaytexture>progress_over.png</overlaytexture>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasAudio</visible>
	</control>

	</controls>
</window>

