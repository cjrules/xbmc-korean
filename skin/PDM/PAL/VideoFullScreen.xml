<window id="2005">
	<defaultcontrol>13</defaultcontrol>
	<controls>

	<!-- Codec Infos -->

	<control type="image" id="0">
		<description>Media Info Background Image</description>
		<posx>-10</posx>
		<posy>40</posy>
		<width>740</width>
		<height>90</height>
		<texture>osd_menu_bg.png</texture>
		<include>media-infopanel-effect</include>
	</control>

	<control type="label" id="10">
		<description>Row 1 Label</description>
		<posx>70</posx>
		<posy>50</posy>
		<label>-</label>
		<align>left</align>
		<font>font12</font>
		<include>media-infopanel-effect</include>
	</control>

	<control type="label" id="11">
		<description>Row 2 Label</description>
		<posx>70</posx>
		<posy>75</posy>
		<label>-</label>
		<align>left</align>
		<font>font12</font>
		<include>media-infopanel-effect</include>
	</control>

	<control type="label" id="12">
		<description>Row 3 Label</description>
		<posx>70</posx>
		<posy>100</posy>
		<label>-</label>
		<align>left</align>
		<font>font12</font>
		<include>media-infopanel-effect</include>
	</control>

	<control type="label" id="24">
		<description>buffering label</description>
		<posx>210</posx>
		<posy>520</posy>
		<label>15107</label>
		<width>291</width>
		<align>center</align>
		<font>font12</font>
		<include>textcolorwhite</include>
	</control>

	<!-- Media Infos -->

	<control type="image" id="1">
		<description>Media Info Background Image</description>
		<posx>-10</posx>
		<posy>455</posy>
		<width>740</width>
		<height>100</height>
		<texture>osd_menu_bg.png</texture>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo</visible>
	</control>

	<control type="image" id="1">
		<description>Cover Image</description>
		<posx>75</posx>
		<posy>455</posy>
		<width>100</width>
		<height>100</height>
		<info>VideoPlayer.Cover</info>
		<aspectratio>keep</aspectratio>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasMedia</visible>
	</control>

	<control type="label" id="1">
		<description>Title Label</description>
		<width>400</width>
		<posx>180</posx>
		<posy>458</posy>
		<info>VideoPlayer.Title</info>
		<align>left</align>
		<font>special12</font>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasMedia</visible>
	</control>

	<control type="label" id="1">
		<description>Video Director/Year Label</description>
		<width>430</width>
		<posx>180</posx>
		<posy>479</posy>
		<label>$INFO[VideoPlayer.Director] | $INFO[VideoPlayer.Year]</label>
		<font>special13</font>
		<align>left</align>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasMedia</visible>
	</control>

	<control type="label" id="1">
		<description>Genre Label</description>
		<width>430</width>
		<posx>180</posx>
		<posy>507</posy>
		<label>$INFO[VideoPlayer.Genre]</label>
		<align>left</align>
		<font>font10</font>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasMedia</visible>
	</control>

	<control type="label" id="1">
		<description>Time Info Label</description>
		<width>430</width>
		<posx>180</posx>
		<posy>528</posy>
		<label>$INFO[VideoPlayer.Time] / $INFO[VideoPlayer.TimeRemaining] / $INFO[VideoPlayer.Duration]</label>
		<align>left</align>
		<font>font10</font>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasMedia</visible>
	</control>

	<control type="label" id="1">
		<description>Time Label</description>
		<width>200</width>
		<posx>660</posx>
		<posy>458</posy>
		<align>right</align>
		<font>special13</font>
		<label>$INFO[System.Time]</label>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo</visible>
	</control>

	<control type="label" id="1">
		<description>Volume Label</description>
		<width>200</width>
		<posx>660</posx>
		<posy>479</posy>
		<align>right</align>
		<font>special13</font>
		<label>$INFO[Player.Volume]</label>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo</visible>
	</control>

	<control type="progress" id="23">
		<description>Progressbar</description>
		<posx>180</posx>
		<posy>548</posy>
		<width>480</width>
		<height>4</height>
		<info>Player.Progress</info>
		<texturebg>progress_back.png</texturebg>
		<lefttexture>progress_left.png</lefttexture>
		<midtexture>progress_mid-blue2.png</midtexture>
		<righttexture>progress_right.png</righttexture>
		<overlaytexture>progress_over.png</overlaytexture>
		<include>media-infopanel-effect</include>
		<visible>Player.ShowInfo + Player.HasMedia</visible>
	</control>

	</controls>
</window>

