<window id="20">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<previouswindow>ShutdownMenu</previouswindow>
	<controls>
		<include>background</include>
		<control type="image">
			<description>list item icon</description>
			<posx>20</posx>
			<posy>100</posy>
			<width>350</width>
			<height>350</height>
			<info>ListItem.Icon</info>
			<aspectratio>keep</aspectratio>
			<visible>Control.IsVisible(50)</visible>
		</control>
		<control type="image">
			<description>list item icon reflection</description>
			<posx>20</posx>
			<posy>450</posy>
			<width>350</width>
			<height>350</height>
			<info>ListItem.Icon</info>
			<texture flipy="true" diffuse="fade2.png">-</texture>
			<aspectratio>keep</aspectratio>
			<visible>Control.IsVisible(50)</visible>
		</control>
		<include>ListView</include>
		<include>List2</include>
		<include>PageControl</include>
		<control type="group" id="9001">
			<include>Slide-In</include>
			<control type="group" id="9000">
				<posx>11</posx>
				<posy>0</posy>
				<control type="button" id="2">
					<description>View As Icons button</description>
					<posy>5</posy>
					<label>100</label>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>3</onup>
					<ondown>3</ondown>
					<include>Media-Button</include>
				</control>
				<control type="button" id="3">
					<description>Sort by button</description>
					<posy>50</posy>
					<label>103</label>
					<onleft>50</onleft>
					<onright>4</onright>
					<onup>2</onup>
					<ondown>5</ondown>
					<include>Media-Button</include>
				</control>
				<control type="togglebutton" id="4">
					<description>Sort asc</description>
					<posx>177</posx>
					<posy>65</posy>
					<label>-</label>
					<onleft>3</onleft>
					<onright>50</onright>
					<onup>2</onup>
					<ondown>2</ondown>
				</control>
				<include>Media-Info</include>
			</control>
		</control>
	</controls>
</window>