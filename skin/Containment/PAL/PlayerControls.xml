<window type="dialog" id="114">
	<defaultcontrol>2</defaultcontrol>
	<visible>Player.HasMedia + Window.IsActive(PlayerControls) + !Window.IsActive(FullscreenVideo) + !Window.IsActive(Visualisation)</visible>
	<animation effect="fade" start="0" time="350">WindowOpen</animation>
	<animation effect="fade" end="0" time="350">WindowClose</animation>
	<coordinates>
		<system>1</system>
		<posx>210</posx>
		<posy>500</posy>
	</coordinates>
	<controls>
<!-- Skip Back Button -->
		<control type="button" id="2">
			<description>Back button</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>50</width>
			<height>50</height>
			<texturefocus>osd-button-side.png</texturefocus>
			<texturenofocus>osd-button-side.png</texturenofocus>
			<onclick>XBMC.PlayerControl(Previous)</onclick>
			<onleft>7</onleft>
			<onright>3</onright>
			<onup>2</onup>
			<ondown>2</ondown>
		</control>
		<control type="image">
			<description>Back button no focus image</description>
			<posx>10</posx>
			<posy>10</posy>
			<width>30</width>
			<height>30</height>
			<texture>osd-previous.png</texture>
			<colordiffuse>icon-nf-color</colordiffuse>
			<visible>!Control.HasFocus(2)</visible>
		</control>
		<control type="image">
			<description>Back button focus image</description>
			<posx>10</posx>
			<posy>10</posy>
			<width>30</width>
			<height>30</height>
			<texture>osd-previous.png</texture>
			<colordiffuse>object-color</colordiffuse>
			<visible>Control.HasFocus(2)</visible>
		</control>
<!-- Rewind Button -->
		<control type="button" id="3">
			<description>Rewind button</description>
			<posx>50</posx>
			<posy>0</posy>
			<width>50</width>
			<height>50</height>
			<texturefocus>osd-button.png</texturefocus>
			<texturenofocus>osd-button.png</texturenofocus>
			<onclick>XBMC.PlayerControl(Rewind)</onclick>
			<onleft>2</onleft>
			<onright>4</onright>
			<onup>3</onup>
			<ondown>3</ondown>
		</control>
		<control type="image">
			<description>Rewind button no focus image</description>
			<posx>60</posx>
			<posy>10</posy>
			<width>30</width>
			<height>30</height>
			<texture>osd-rewind.png</texture>
			<colordiffuse>icon-nf-color</colordiffuse>
			<visible>!Control.HasFocus(3)</visible>
		</control>
		<control type="image">
			<description>Rewind button focus image</description>
			<posx>60</posx>
			<posy>10</posy>
			<width>30</width>
			<height>30</height>
			<texture>osd-rewind.png</texture>
			<colordiffuse>object-color</colordiffuse>
			<visible>Control.HasFocus(3)</visible>
		</control>
<!-- Stop Button -->
		<control type="button" id="4">
			<description>Stop button</description>
			<posx>100</posx>
			<posy>0</posy>
			<width>50</width>
			<height>50</height>
			<texturefocus>osd-button.png</texturefocus>
			<texturenofocus>osd-button.png</texturenofocus>
			<onclick>XBMC.PlayerControl(Stop)</onclick>
			<onleft>3</onleft>
			<onright>5</onright>
			<onup>3</onup>
			<ondown>3</ondown>
		</control>
		<control type="image">
			<description>Stop button no focus image</description>
			<posx>110</posx>
			<posy>10</posy>
			<width>30</width>
			<height>30</height>
			<texture>osd-stop.png</texture>
			<colordiffuse>icon-nf-color</colordiffuse>
			<visible>!Control.HasFocus(4)</visible>
		</control>
		<control type="image">
			<description>Stop button focus image</description>
			<posx>110</posx>
			<posy>10</posy>
			<width>30</width>
			<height>30</height>
			<texture>osd-stop.png</texture>
			<colordiffuse>object-color</colordiffuse>
			<visible>Control.HasFocus(4)</visible>
		</control>
<!-- Pause/Play Button -->
		<control type="button" id="5">
			<description>Pause button</description>
			<posx>150</posx>
			<posy>0</posy>
			<width>50</width>
			<height>50</height>
			<texturefocus>osd-button.png</texturefocus>
			<texturenofocus>osd-button.png</texturenofocus>
			<onclick>XBMC.PlayerControl(Play)</onclick>
			<onleft>4</onleft>
			<onright>6</onright>
			<onup>3</onup>
			<ondown>3</ondown>
		</control>
		<control type="image">
			<description>Pause button no focus image</description>
			<posx>160</posx>
			<posy>10</posy>
			<width>30</width>
			<height>30</height>
			<texture>osd-pause.png</texture>
			<colordiffuse>icon-nf-color</colordiffuse>
			<visible>!Control.HasFocus(5) + Player.Playing</visible>
		</control>
		<control type="image">
			<description>Pause button focus image</description>
			<posx>160</posx>
			<posy>10</posy>
			<width>30</width>
			<height>30</height>
			<texture>osd-pause.png</texture>
			<colordiffuse>object-color</colordiffuse>
			<visible>Control.HasFocus(5) + Player.Playing</visible>
		</control>
		<control type="image">
			<description>Play button no focus image</description>
			<posx>160</posx>
			<posy>10</posy>
			<width>30</width>
			<height>30</height>
			<texture>osd-play.png</texture>
			<colordiffuse>icon-nf-color</colordiffuse>
			<visible>!Control.HasFocus(5) + [Player.Paused | Player.Forwarding | Player.Rewinding]</visible>
		</control>
		<control type="image">
			<description>Play button focus image</description>
			<posx>160</posx>
			<posy>10</posy>
			<width>30</width>
			<height>30</height>
			<texture>osd-play.png</texture>
			<colordiffuse>object-color</colordiffuse>
			<visible>Control.HasFocus(5) + [Player.Paused | Player.Forwarding | Player.Rewinding]</visible>
		</control>
<!-- Forward Button -->
		<control type="button" id="6">
			<description>Forward button</description>
			<posx>200</posx>
			<posy>0</posy>
			<width>50</width>
			<height>50</height>
			<texturefocus>osd-button.png</texturefocus>
			<texturenofocus>osd-button.png</texturenofocus>
			<onclick>XBMC.PlayerControl(Forward)</onclick>
			<onleft>5</onleft>
			<onright>7</onright>
			<onup>3</onup>
			<ondown>3</ondown>
		</control>
		<control type="image">
			<description>Forward button no focus image</description>
			<posx>210</posx>
			<posy>10</posy>
			<width>30</width>
			<height>30</height>
			<texture>osd-ff.png</texture>
			<colordiffuse>icon-nf-color</colordiffuse>
			<visible>!Control.HasFocus(6)</visible>
		</control>
		<control type="image">
			<description>Forward button focus image</description>
			<posx>210</posx>
			<posy>10</posy>
			<width>30</width>
			<height>30</height>
			<texture>osd-ff.png</texture>
			<colordiffuse>object-color</colordiffuse>
			<visible>Control.HasFocus(6)</visible>
		</control>
<!-- Next Button -->
		<control type="button" id="7">
			<description>Next button</description>
			<posx>250</posx>
			<posy>0</posy>
			<width>50</width>
			<height>50</height>
			<texturefocus flipx="true">osd-button-side.png</texturefocus>
			<texturenofocus flipx="true">osd-button-side.png</texturenofocus>
			<onclick>XBMC.PlayerControl(Next)</onclick>
			<onleft>6</onleft>
			<onright>2</onright>
			<onup>3</onup>
			<ondown>3</ondown>
		</control>
		<control type="image">
			<description>Next button no focus image</description>
			<posx>260</posx>
			<posy>10</posy>
			<width>30</width>
			<height>30</height>
			<texture>osd-next.png</texture>
			<colordiffuse>icon-nf-color</colordiffuse>
			<visible>!Control.HasFocus(7)</visible>
		</control>
		<control type="image">
			<description>Next button focus image</description>
			<posx>260</posx>
			<posy>10</posy>
			<width>30</width>
			<height>30</height>
			<texture>osd-next.png</texture>
			<colordiffuse>object-color</colordiffuse>
			<visible>Control.HasFocus(7)</visible>
		</control>

	</controls>
</window>