			<include>common-fade-home</include>
			<include>Home-Visible</include>
			<visible>!Skin.HasSetting(SysStat)</visible>
		</control>
		<control type="progress">
			<description>CPU Indicator</description>
			<info>bar.cpuusage</info>
			<visible>true</visible>
			<posx>50</posx>
			<posy>512</posy>
			<width>40</width>
			<height>9</height>
			<texturebg>Progress-Back2.png</texturebg>
			<lefttexture>-</lefttexture>
			<midtexture>Progress-Mid3.png</midtexture>
			<righttexture>-</righttexture>
			<overlaytexture border="10,0,10,0">Progress-Overlay.png</overlaytexture>
			<include>common-FX-1</include>
			<include>common-fade-home</include>
			<include>Home-Visible</include>
			<visible>!Skin.HasSetting(SysStat)</visible>
			<animation effect="fade" end="30" time="0" condition="true">Conditional</animation>
		</control>
		<control type="label" id="200">
