<window id="0">
	<defaultcontrol always="true">10</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
	<include>Background</include>
	<include>Guider</include>

	<control type="group" id="10">
		<include>CommonView_Home</include>

		<control type="label" id="200">
			<description>Time/Date Label</description>
			<posx>694</posx>
			<posy>35</posy>
			<label>$INFO[System.Date] | $INFO[System.Time]</label>
			<align>right</align>
			<font>font10</font>
			<include>textcolorlightgrey</include>
			<include>common-FX-1</include>
			<include>common-fade-home</include>
			<include>Home-Visible</include>
			<visible>!Skin.HasSetting(Home-Time)</visible>
		</control>
		<control type="image">
			<description>Weather Conditions</description> 
			<posx>26</posx> 
			<posy>33</posy> 
			<width>25</width> 
			<height>25</height> 
			<aspectratio>scale</aspectratio>
			<info>Weather.Conditions</info> 
			<colordiffuse>98FFFFFFF</colordiffuse>
			<include>common-FX-1</include>
			<include>common-fade-home</include>
			<visible>Weather.IsFetched</visible>
			<visible>!Skin.HasSetting(weather)</visible>
			<visible>!Window.IsActive(114)</visible>
		</control> 
		<control type="label">
			<description>Weather Temperature</description> 
			<posx>56</posx> 
			<posy>35</posy> 
			<info>Weather.Temperature</info> 
			<font>font10</font> 
			<align>left</align>
			<include>textcolorlightgrey</include>
			<include>common-FX-1</include>
			<include>common-fade-home</include>
			<visible>Weather.IsFetched</visible>
			<visible>!Skin.HasSetting(weather)</visible>
			<visible>!Window.IsActive(114)</visible>
		</control>
		<control type="label">
			<description>Weather Location</description> 
			<posx>86</posx> 
			<posy>35</posy> 
			<info>Weather.Location</info> 
			<font>font10</font> 
			<align>left</align>
			<include>textcolorlightgrey</include>
			<include>common-FX-1</include>
			<include>common-fade-home</include>
			<visible>Weather.IsFetched</visible>
			<visible>!Skin.HasSetting(weather)</visible>
			<visible>!Window.IsActive(114)</visible>
		</control>
		<control type="rss">
			<description>rss feed</description>
			<posx>0</posx> 
			<posy>550</posy>			
			<width>720</width>
			<font>font13</font>
			<urlset>1</urlset>
			<titlecolor>rss</titlecolor>
			<headlinecolor>white</headlinecolor>
			<textcolor>rss</textcolor>
			<shadowcolor>black</shadowcolor>
			<include>common-FX-1</include>
			<include>common-fade-home</include>
			<include>Home-Visible</include>
			<visible>!Skin.HasSetting(RSS)</visible>
			<animation effect="fade" start="40" end="40" time="0" condition="true">conditional</animation>
		</control>
		<control type="label" id="200">
			<description>CPU Label</description>
			<posx>26</posx>
			<posy>509</posy>
