<window id="2007">
	<defaultcontrol>1</defaultcontrol>
	<controls>
		<!-- media infos -->
		<control type="group" id="1">
			<posx>0</posx>
			<posy>496</posy>
			<visible>Player.ShowInfo + Player.HasMedia</visible>
			<animation effect="fade" time="500">VisibleChange</animation>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>360</width>
				<height>72</height>
				<texture border="6">Slider_focus_right.png</texture>
			</control>
			<control type="group">
				<control type="image" id="1">
					<description>cover image</description>
					<posx>17</posx>
					<posy>8</posy>
					<width>56</width>
					<height>56</height>
					<info>MusicPlayer.Cover</info>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="label" id="1">
					<posx>92</posx>
					<posy>16</posy>
					<font>font12</font>
					<align>left</align>
					<info>MusicPlayer.Artist</info>
					<width>304</width>
					<aligny>center</aligny>
				</control>
				<control type="label" id="1">
					<posx>92</posx>
					<posy>34</posy>
					<font>font13</font>
					<align>left</align>
					<info>MusicPlayer.Title</info>
					<textcolor>red</textcolor>
					<width>304</width>
					<aligny>center</aligny>
				</control>
				<control type="label" id="1">
					<posx>92</posx>
					<posy>56</posy>
					<font>font12</font>
					<align>left</align>
					<label>$INFO[musicplayer.Time]$INFO[musicplayer.Duration, / ]</label>
					<width>304</width>
					<aligny>center</aligny>
				</control>
			</control>
		</control>
	</controls>
</window>
