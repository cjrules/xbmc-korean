<window id="2007">
	<defaultcontrol>2</defaultcontrol>
	<controls>
		<control type="image" id="0">
			<description>bar image</description>
			<posx>0</posx>
			<posy>45</posy>
			<width>720</width>
			<height>90</height>
			<texture>voulume-panel-bg.png</texture>
			<visible>Player.ShowCodec</visible>
		</control>
		<control type="label" id="10">
			<description>row 1 label</description>
			<posx>60</posx>
			<posy>52</posy>
			<width>600</width>
			<label>-</label>
			<align>center</align>
			<visible>Player.ShowCodec</visible>
		</control>
		<control type="label" id="11">
			<description>row 2 label</description>
			<posx>60</posx>
			<posy>72</posy>
			<width>600</width>
			<label>-</label>
			<align>center</align>
			<visible>Player.ShowCodec</visible>
		</control>
		<control type="label" id="12">
			<description>row 3 label</description>
			<posx>60</posx>
			<posy>92</posy>
			<width>600</width>
			<label>-</label>
			<align>center</align>
			<visible>no</visible>
			<visible>Player.ShowCodec</visible>
		</control>
		<control type="image" id="13">
			<description>pause image</description>
			<align>right</align>
			<posx>580</posx>
			<posy>25</posy>
			<height>64</height>
			<width>128</width>
			<visible>no</visible>
			<texture>video-pause.png</texture>
			<colorkey>0</colorkey>
			<colordiffuse>ffffffff</colordiffuse>
			<visible>Player.ShowCodec</visible>
		</control>
		<control type="group" id="1">
			<animation effect="fade" time="200">VisibleChange</animation>
			<control type="image" id="1">
				<description>media info background image</description>
				<posx>-10</posx>
				<posy>430</posy>
				<width>740</width>
				<height>110</height>
				<visible>Player.ShowInfo</visible>
				<animation effect="fade" time="1000">VisibleChange</animation>
				<texture>bluebar.png</texture>
			</control>
			<control type="image" id="1">
				<description>cover image</description>
				<posx>30</posx>
				<posy>330</posy>
				<width>220</width>
				<height>220</height>
				<info>MusicPlayer.Cover</info>
				<visible>Player.ShowInfo</visible>
				<animation effect="fade" time="1000">VisibleChange</animation>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="label" id="1">
				<description>Title label</description>
				<width>430</width>
				<posx>260</posx>
				<posy>435</posy>
				<info>MusicPlayer.Title</info>
				<visible>Player.ShowInfo</visible>
				<animation effect="fade" time="1000">VisibleChange</animation>
				<align>left</align>
				<font>font20</font>
			</control>
			<control type="label" id="1">
				<description>Artist label</description>
				<width>430</width>
				<posx>260</posx>
				<posy>460</posy>
				<info>MusicPlayer.Artist</info>
				<visible>Player.ShowInfo</visible>
				<animation effect="fade" time="1000">VisibleChange</animation>
				<align>left</align>
			</control>
			<control type="label" id="1">
				<description>Album label</description>
				<width>430</width>
				<posx>260</posx>
				<posy>480</posy>
				<info>MusicPlayer.Album</info>
				<visible>Player.ShowInfo</visible>
				<animation effect="fade" time="1000">VisibleChange</animation>
				<align>left</align>
			</control>
			<control type="label" id="1">
				<description>time label</description>
				<width>430</width>
				<posx>260</posx>
				<posy>505</posy>
				<label>$INFO[musicplayer.Time]$INFO[musicplayer.Duration, / ]</label>
				<visible>Player.ShowInfo</visible>
				<animation effect="fade" time="1000">VisibleChange</animation>
				<align>left</align>
			</control>
			<control type="label" id="1">
				<description>Playlist Pos No</description>
				<width>200</width>
				<posx>650</posx>
				<posy>505</posy>
				<label>$INFO[musicplayer.Playlistposition,$LOCALIZE[435] ]$INFO[musicplayer.Playlistlength, / ]</label>
				<visible>Player.ShowInfo + !MusicPartyMode.Enabled</visible>
				<animation effect="fade" time="1000">VisibleChange</animation>
				<align>right</align>
			</control>
			<control type="label" id="1">
				<description>PartyMode Enabled</description>
				<width>200</width>
				<posx>660</posx>
				<posy>505</posy>
				<label>585</label>
				<visible>Player.ShowInfo + MusicPartyMode.Enabled</visible>
				<animation effect="fade" time="1000">VisibleChange</animation>
				<align>right</align>
			</control>
		</control>
	</controls>
</window>