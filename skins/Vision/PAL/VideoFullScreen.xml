<window id="2005">
	<defaultcontrol>-</defaultcontrol>
	<controls>
		<control type="image" id="0">
			<description>bar image</description>
			<posx>0</posx>
			<posy>45</posy>
			<width>720</width>
			<height>90</height>
			<texture>voulume-panel-bg.png</texture>
		</control>
		<control type="label" id="10">
			<description>row 1 label</description>
			<posx>60</posx>
			<posy>52</posy>
			<width>600</width>
			<label>-</label>
			<align>center</align>
		</control>
		<control type="label" id="11">
			<description>row 2 label</description>
			<posx>60</posx>
			<posy>72</posy>
			<width>600</width>
			<label>-</label>
			<align>center</align>
		</control>
		<control type="label" id="12">
			<description>row 3 label</description>
			<posx>60</posx>
			<posy>92</posy>
			<width>600</width>
			<label>-</label>
			<align>center</align>
		</control>
		<control type="group" id="1">
			<visible>![Window.IsActive(VideoBookmarks) | Window.IsActive(OSDVideoSettings) | Window.IsActive(OSDAudioSettings)]</visible>
			<animation effect="fade" time="200">VisibleChange</animation>
			<control type="image" id="1">
				<description>media info background image</description>
				<posx>-10</posx>
				<posy>430</posy>
				<width>740</width>
				<height>110</height>
				<visible>Player.ShowInfo</visible>
				<animation effect="fade" time="1000">VisibleChange</animation>
				<texture>bluebar.png</texture>
			</control>
			<control type="image" id="1">
				<description>cover image</description>
				<posx>30</posx>
				<posy>330</posy>
				<width>180</width>
				<height>220</height>
				<info>VideoPlayer.Cover</info>
				<visible>Player.ShowInfo</visible>
				<animation effect="fade" time="1000">VisibleChange</animation>
				<aspectratio aligny="bottom">keep</aspectratio>
			</control>
			<control type="label" id="1">
				<description>Title label</description>
				<width>470</width>
				<posx>220</posx>
				<posy>435</posy>
				<info>VideoPlayer.Title</info>
				<visible>Player.ShowInfo</visible>
				<animation effect="fade" time="1000">VisibleChange</animation>
				<align>left</align>
				<font>font20</font>
			</control>
			<control type="label" id="1">
				<description>Genre label</description>
				<width>470</width>
				<posx>220</posx>
				<posy>460</posy>
				<info>VideoPlayer.Genre</info>
				<visible>Player.ShowInfo</visible>
				<animation effect="fade" time="1000">VisibleChange</animation>
				<align>left</align>
			</control>
			<control type="label" id="1">
				<description>Director label</description>
				<width>470</width>
				<posx>220</posx>
				<posy>480</posy>
				<info>VideoPlayer.Director</info>
				<visible>Player.ShowInfo</visible>
				<animation effect="fade" time="1000">VisibleChange</animation>
				<align>left</align>
			</control>
			<control type="label" id="1">
				<description>time label</description>
				<width>430</width>
				<posx>220</posx>
				<posy>505</posy>
				<label>$INFO[player.Time]$INFO[player.Duration, / ]</label>
				<visible>Player.ShowInfo</visible>
				<animation effect="fade" time="1000">VisibleChange</animation>
				<align>left</align>
			</control>
			<control type="label" id="1">
				<description>Chapter Pos No</description>
				<width>200</width>
				<posx>650</posx>
				<posy>505</posy>
				<label>$INFO[player.chapter,$LOCALIZE[21396] ]$INFO[player.chaptercount, / ]</label>
				<visible>Player.ShowInfo + player.chaptercount</visible>
				<animation effect="fade" time="1000">VisibleChange</animation>
				<align>right</align>
			</control>
		</control>
	</controls>
</window>