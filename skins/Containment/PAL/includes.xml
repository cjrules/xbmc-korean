<includes>
	<include file="Defaults.xml" />
	<include file="CommonViewTypes.xml" />

<!-- Background Stuff -->
	<include name="Home-Background">
		<control type="visualisation" id="100">
			<description>background visualisation</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<visible>Skin.HasSetting(HomeViewToggle)</visible>
			<visible>Player.HasAudio</visible>
		</control>
		<control type="videowindow" id="101">
			<description>video</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<visible>Skin.HasSetting(HomeViewToggle)</visible>
			<visible>Player.HasVideo</visible>
		</control>
		<control type="multiimage">
			<description>background animation</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<info>Skin.String(custom-ani)</info>
			<timeperimage>2</timeperimage>
			<visible>Skin.string(custom-ani)</visible>
			<visible>![Control.IsVisible(100) | Control.IsVisible(101)]</visible>
		</control>
		<control type="image" id="102">
			<description>Custom background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<info>Skin.String(custom-background)</info>
			<visible>!Skin.HasSetting(no-background)</visible>
			<visible>Skin.String(custom-background)</visible>
			<visible>!Skin.String(custom-ani)</visible>
			<visible>![Control.IsVisible(100) | Control.IsVisible(101)]</visible>
		</control>
		<control type="image" id="103">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>background.png</texture>
			<visible>!Skin.HasSetting(no-background)</visible>
			<visible>!Skin.String(custom-background)</visible>
			<visible>!Skin.String(custom-ani)</visible>
			<visible>![Control.IsVisible(100) | Control.IsVisible(101)]</visible>
		</control>
		<control type="image">
			<description>Custom background image with vis\video</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<info>Skin.String(custom-background)</info>
			<colordiffuse>88FFFFFF</colordiffuse>
			<visible>!Skin.HasSetting(no-background)</visible>
			<visible>![Control.IsVisible(102) | Control.IsVisible(103)]</visible>
		</control>
		<control type="image">
			<description>background image with vis\video</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>background.png</texture>
			<colordiffuse>88FFFFFF</colordiffuse>
			<visible>!Skin.HasSetting(no-background)</visible>
			<visible>![Control.IsVisible(102) | Control.IsVisible(103)]</visible>
		</control>
		<control type="image">
			<description>background screen image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>background-screen.png</texture>
		</control>
	</include>
