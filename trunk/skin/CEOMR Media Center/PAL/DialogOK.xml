<window id="2002">
  <defaultcontrol>10</defaultcontrol>

  <animation effect="fade" time="200">WindowOpen</animation>
  <animation effect="fade" time="200">WindowClose</animation>

  <controls>

     <control type="image" id="1">
        <posx>0</posx>
        <posy>0</posy>
      <width>720</width>
      <height>576</height>
      <texture>background_dialog.png</texture>
    </control>

     <control type="image" id="1">
      <description>background image</description>
        <posx>0</posx>
        <posy>0</posy>
      <width>720</width>
      <height>576</height>
      <texture>background.png</texture>
      <visible>!Skin.HasSetting(hintergrund)+Window.IsActive(0)</visible>
    </control>

     <control type="image" id="1">
      <description>background self</description>
        <posx>0</posx>
        <posy>0</posy>
      <width>720</width>
      <height>576</height>
      <visible>Skin.HasSetting(hintergrund)+Window.IsActive(0)</visible>
      <info>Skin.String(hintergrund)</info>
    </control>

    <control type="image" id="1">
      <description>xbmc logo</description>
      <include>xbmclogo</include>
      <visible>!Skin.HasSetting(logo)+Window.IsActive(0)</visible>
      <animation effect="zoom" time="600" start="150" end="150">WindowOpen</animation>
      <animation effect="zoom" time="600" start="150" end="150">WindowClose</animation>
    </control>

    <control type="image" id="1">
      <posx>147</posx>
      <posy>225</posy>
      <width>436</width>
      <height>170</height>
      <texture>dialog-popup.png</texture>
    </control>

    <control type="label" id="1">
      <description>dialog Heading</description>
      <posx>193</posx>
      <posy>228</posy>
      <label>-</label>
      <haspath>yes</haspath>
      <width>400</width>
      <font>font13</font>
      <include>textcolordialog</include>
    </control>

    <control type="label" id="2">
      <description>dialog line 1</description>
      <posx>210</posx>
      <posy>270</posy>
      <label>-</label>
      <haspath>yes</haspath>
      <width>345</width>
      <font>font10</font>
      <include>textcolorwhite</include>
    </control>

    <control type="label" id="3">
      <description>dialog line 2</description>
      <posx>210</posx>
      <posy>290</posy>
      <label>-</label>
      <haspath>yes</haspath>
      <width>360</width>
      <font>font10</font>
      <include>textcolorwhite</include>
    </control>

    <control type="label" id="4">
      <description>dialog line 3</description>
      <posx>210</posx>
      <posy>310</posy>
      <label>-</label>
      <haspath>yes</haspath>
      <width>360</width>
      <font>font10</font>
      <include>textcolorwhite</include>
    </control>

    <control type="button" id="10">
      <description>OK button</description>
      <posx>360</posx>
      <posy>330</posy>
      <width>40</width>
      <height>30</height>
      <label>186</label>
      <font>font10</font>
      <onleft>10</onleft>
      <align>center</align>
      <onright>10</onright>
      <onup>10</onup>
      <ondown>10</ondown>
    </control>

  </controls>

</window>

