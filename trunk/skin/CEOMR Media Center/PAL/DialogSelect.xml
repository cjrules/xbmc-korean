<window id="2000">
  <defaultcontrol>3</defaultcontrol>
  <controls>

     <control type="image" id="1">
      <description>background image</description>
        <posx>0</posx>
        <posy>0</posy>
      <width>720</width>
      <height>576</height>
      <texture>background.png</texture>
      <visible>!Skin.HasSetting(hintergrund)</visible>
    </control>

     <control type="image" id="1">
      <description>background self</description>
        <posx>0</posx>
        <posy>0</posy>
      <width>720</width>
      <height>576</height>
      <visible>Skin.HasSetting(hintergrund)</visible>
      <info>Skin.String(hintergrund)</info>
    </control>

    <control type="label" id="2">
      <description>number of files text label</description>
      <posx>210</posx>
      <posy>520</posy>
      <label>-</label>
      <font>font14</font>
      <include>textcolordialog</include>
    </control>

    <control type="label" id="1">
      <description>Heading text label</description>
      <posx>280</posx>
      <posy>60</posy>
      <label>181</label>
      <font>font14</font>
      <include>textcolorwhite</include>
    </control>

    <control type="listcontrol" id="3">
      <description>pics listcontrol</description>
      <posx>211</posx>
      <posy>100</posy>
      <onleft>5</onleft>
      <onright>5</onright>
      <onup>3</onup>
      <ondown>3</ondown>
    </control>

    <control type="button" id="5">
      <description>IMDB</description>
      <posx>60</posx>
      <posy>120</posy>
      <label>368</label>
      <onleft>3</onleft>
      <onright>3</onright>
      <onup>3</onup>
      <ondown>3</ondown>
    </control>

  </controls>

</window>

