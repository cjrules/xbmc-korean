<window id="2800">
        <defaultcontrol>10</defaultcontrol>
        <allowoverlay>no</allowoverlay>
        <controls>

     <control type="image" id="0">
      <description>background image</description>
      <type>image</type>
        <posx>0</posx>
        <posy>0</posy>
      <width>720</width>
      <height>576</height>
      <texture>background.png</texture>
      <visible>!Skin.HasSetting(hintergrund)</visible>
    </control>

     <control type="image" id="0">
      <description>background self</description>
      <type>image</type>
        <posx>0</posx>
        <posy>0</posy>
      <width>720</width>
      <height>576</height>
      <visible>Skin.HasSetting(hintergrund)</visible>
      <info>Skin.String(hintergrund)</info>
    </control>

                <control type="webbrowser" id="10">
                        <description>Web browser</description>
      			<include>logo</include>
                        <posx>30</posx>
                        <posy>30</posy>
                        <width>650</width>
                        <height>520</height>
                        <onleft>10</onleft>
                        <onright>10</onright>
                </control>

<!-- Page info (title, url, status) -->
		<control type="group">
			<visible>WebBrowser.ShowPageInfo + WebBrowser.InExpertMode</visible>
			<animation effect="slide" time="200" start="0,-75">Visible</animation>
			<animation effect="slide" time="200" end="0,-75">Hidden</animation>
			<control type="image" id="0">
				<description>preset background image</description>
				<posx>-10</posx>
				<posy>10</posy>
				<width>740</width>
				<height>65</height>
				<texture>web-panel-bg.png</texture>
			</control>
			<control type="fadelabel">
				<description>Page title</description>
				<width>570</width>
				<posx>75</posx>
				<posy>18</posy>
				<label>$INFO[WebBrowser.Title]</label>
				<align>left</align>
				<font>special13</font>
				<visible>WebBrowser.ShowPageInfo + WebBrowser.InExpertMode</visible>
				<animation effect="fade" time="100">Visible</animation>
				<animation effect="fade" time="100">Hidden</animation>
			</control>
			<control type="fadelabel">
				<description>Page URL</description>
				<posx>75</posx>
				<posy>43</posy>
				<width>570</width>
				<label>$INFO[WebBrowser.URL]</label>
				<font>special12</font>
				<align>left</align>
				<visible>WebBrowser.ShowPageInfo + WebBrowser.InExpertMode</visible>
				<animation effect="fade" time="100">Visible</animation>
				<animation effect="fade" time="100">Hidden</animation>
			</control>
		</control>
<!-- Statusbar -->
                <control type="group">
                        <visible>WebBrowser.InExpertMode + ![!WebBrowser.ShowPageInfo + !WebBrowser.IsBusy]</visible>
                        <animation effect="slide" time="200" start="0,60">Visible</animation>
                        <animation effect="slide" time="200" end="0,60">Hidden</animation>
			<control type="image">
				<description>preset background image 2</description>
				<posx>-10</posx>
				<posy>526</posy>
				<width>740</width>
				<height>50</height>
				<texture>web-panel-bg.png</texture>
			</control>
			<control type="fadelabel">
				<description>Page status</description>
				<width>560</width>
				<posx>75</posx>
				<posy>531</posy>
				<label>$INFO[WebBrowser.Status]</label>
				<align>left</align>
				<font>font10</font>
			</control>
                </control>
<!-- Audio thumbnail -->
		<control type="group">
			<posx>365</posx>
			<posy>0</posy>
                        <visible>Player.HasAudio + Player.ShowInfo</visible>
                        <animation effect="slide" time="200" end="0,75" condition="WebBrowser.ShowPageInfo + WebBrowser.InExpertMode">Conditional</animation>
			<animation effect="fade" time="200">VisibleChange</animation>
			<animation effect="slide" time="500" start="600,0" end="0,0" acceleration="-1.1" delay="0" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
			<animation effect="slide" time="500" start="0,0" end="600,0" acceleration="-1.3" delay="0" condition="!Skin.HasSetting(animated)">WindowClose</animation>
			<control type="image">
				<description>gradient</description>
				<posx>-5</posx>
				<posy>-20</posy>
				<width>350</width>
				<height>155</height>
				<texture border="5,0,0,0">voulume-panel-bg.png</texture>
			</control>
			<control type="image">
				<description>Cover image</description>
				<posx>255</posx>
				<posy>10</posy>
				<width>70</width>
				<height>70</height>
				<aspectratio>keep</aspectratio>
				<info>MusicPlayer.Cover</info>
			</control>
			<control type="label">
				<description>Artist label</description>
				<width>190</width>
				<posx>245</posx>
				<posy>7</posy>
				<info>MusicPlayer.Artist</info>
				<align>right</align>
				<font>special12</font>
			</control>
			<control type="label">
				<description>Title label</description>
				<width>190</width>
				<posx>245</posx>
				<posy>32</posy>
				<info>MusicPlayer.Title</info>
				<align>right</align>
				<font>special13</font>
			</control>
			<control type="label">
				<description>Time label</description>
				<width>190</width>
				<posx>245</posx>
				<posy>57</posy>
				<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
				<align>right</align>
				<font>font10</font>
			</control>
		</control>
<!-- Video thumbnail -->
		<control type="group">
			<posx>540</posx>
			<posy>15</posy>
                        <visible>Player.HasVideo + Player.ShowInfo</visible>
                        <animation effect="slide" time="200" end="0,75" condition="WebBrowser.ShowPageInfo + WebBrowser.InExpertMode">Conditional</animation>
			<animation effect="fade" time="200">VisibleChange</animation>
			<animation effect="slide" time="500" start="600,0" end="0,0" acceleration="-1.1" delay="0" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
			<animation effect="slide" time="500" start="0,0" end="600,0" acceleration="-1.3" delay="0" condition="!Skin.HasSetting(animated)">WindowClose</animation>
			<control type="image">
				<description>gradient</description>
				<posx>-24</posx>
				<posy>-35</posy>
				<width>180</width>
				<height>233</height>
				<texture border="5,0,0,0">voulume-panel-bg.png</texture>
			</control>
			<control type="videowindow">
				<description>video preview window</description>
				<posx>10</posx>
				<posy>5</posy>
				<width>130</width>
				<height>95</height>
			</control>
			<control type="label">
				<description>Title label</description>
				<width>130</width>
				<posx>10</posx>
				<posy>100</posy>
				<align>center</align>
				<label>$INFO[VideoPlayer.Title]</label>
				<font>font10</font>
				<scroll>true</scroll>
			</control>
		</control>

     <control type="button" id="1512">
      <description>background image</description>
      <type>image</type>
        <posx>0</posx>
        <posy>0</posy>
      <width>720</width>
      <height>10</height>
      <onclick>XBMC.ActivateWindow(2801)</onclick>
      <texture>progress_mid_over.png</texture>
    </control>

        </controls>
</window>