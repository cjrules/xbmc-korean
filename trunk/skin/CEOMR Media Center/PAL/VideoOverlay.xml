<window id="2004">

  <defaultcontrol>2</defaultcontrol>

   <animation effect="fade" time="400">WindowOpen</animation> 
   <animation effect="fade" time="100">WindowClose</animation>
   <animation effect="fade" time="100">VisibleChange</animation>
   <animation effect="slide" time="400" start="-200,0" end="0,0" acceleration="-1.1" delay="0">WindowOpen</animation>
   <animation effect="slide" time="100" start="0,0" end="-200,0" acceleration="-1.3" delay="0">WindowClose</animation>

  <controls>

    <control type="image" id="1">
      <description>image</description>

      <visible>Window.IsActive(2800)</visible>

      <posx>35</posx>
      <posy>410</posy>
      <width>250</width>
      <height>185</height>
      <texture>bar.png</texture>
    </control>

    <control type="videowindow" id="1">
      <description>video preview window</description>
      <aspectratio>keep</aspectratio>
      <posx>70</posx>
      <posy>454</posy>
      <width>60</width>
      <height>66</height>
    </control>

    <control type="fadelabel" id="1">
      <description>video info label</description>
      <width>130</width>
      <posx>70</posx>
      <posy>522</posy>
      <info>VideoPlayer.Title</info> 
      <font>font13</font>
      <include>textcolorlightblue</include>
    </control>

    <control type="fadelabel" id="1">
      <description>video info label</description>
      <width>100</width>
      <posx>137</posx>
      <posy>505</posy>
      <info>VideoPlayer.Time</info>
      <font>font13</font>
      <include>textcolorlightgrey</include>
    </control>

    <control type="image" id="1">
      <visible>Player.Playing</visible>
      <description>play logo</description>
