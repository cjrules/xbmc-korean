<window id="2007">
	<defaultcontrol>2</defaultcontrol>
	<controls>

	<control type="image" id="1">
		<description>bar image</description>
		<posx>-10</posx>
		<posy>40</posy>
		<width>740</width>
		<height>65</height>
		<texture>Black.png</texture>
		<include>common-fade</include>
		<visible>Player.ShowCodec</visible>
	</control>
	<control type="label" id="10">
		<description>row 1 label</description>
		<posx>70</posx>
		<posy>50</posy>
		<font>font12</font>
		<label>-</label>
		<shadowcolor>black</shadowcolor>
		<align>left</align>
		<include>common-fade</include>
		<visible>Player.ShowCodec</visible>
	</control>
	<control type="label" id="11">
		<description>row 2 label</description>
		<posx>70</posx>
		<posy>75</posy>
		<font>font12</font>
		<label>-</label>
		<shadowcolor>black</shadowcolor>
		<align>left</align>
		<include>common-fade</include>
		<visible>Player.ShowCodec</visible>
	</control>
	<control type="label" id="12">
		<description>row 2 extra label</description>
		<posx>250</posx>
		<posy>75</posy>
		<font>font12</font>
		<label>-</label>
		<shadowcolor>black</shadowcolor>
		<align>left</align>
		<include>common-fade</include>
		<visible>Player.ShowCodec</visible>
	</control>
	<control type="image" id="13">
		<description>pause image</description>
		<align>right</align>
		<posx>580</posx>
		<posy>25</posy>
		<height>64</height>
		<width>128</width>
		<visible>no</visible>
		<texture>-</texture>
		<colorkey>0</colorkey>
	</control>

	<!-- Media Info controls -->

	<control type="image" id="1">
		<description>media info background image</description>
		<posx>-10</posx>
		<posy>455</posy>
		<width>740</width>
		<height>100</height>
		<texture>Black.png</texture>
		<include>common-fade</include>
		<visible>Player.HasMedia + Player.ShowInfo</visible>
	</control>
	<control type="image" id="1">
		<description>cover image</description>
		<posx>75</posx>
		<posy>455</posy>
		<width>100</width>
		<height>100</height>
		<info>MusicPlayer.Cover</info>
		<aspectratio>keep</aspectratio>
		<include>common-fade</include>
		<visible>Player.HasMedia + Player.ShowInfo</visible>
	</control>
	<control type="label" id="1">
		<description>Artist label</description>
		<width>445</width>
		<posx>180</posx>
		<posy>458</posy>
		<font>special12</font>
		<info>MusicPlayer.Artist</info>
		<shadowcolor>black</shadowcolor>
		<align>left</align>
		<include>common-fade</include>
		<visible>Player.HasMedia + Player.ShowInfo</visible>
	</control>
	<control type="label" id="1">
		<description>Title label</description>
		<width>430</width>
		<posx>180</posx>
		<posy>479</posy>
		<font>special13</font>
		<info>MusicPlayer.Title</info>
		<shadowcolor>black</shadowcolor>
		<align>left</align>
		<include>common-fade</include>
		<visible>Player.HasMedia + Player.ShowInfo</visible>
	</control>
	<control type="label" id="1">
		<description>Album label</description>
		<width>430</width>
		<posx>180</posx>
		<posy>507</posy>
		<font>font10</font>
		<info>MusicPlayer.Album</info>
		<shadowcolor>black</shadowcolor>
		<align>left</align>
		<include>common-FX</include>
		<visible>Player.HasMedia + Player.ShowInfo</visible>
	</control>
	<control type="label" id="1">
		<description>time label</description>
		<width>430</width>
		<posx>180</posx>
		<posy>528</posy>
		<font>font10</font>
		<label>$INFO[musicplayer.Time]$INFO[musicplayer.Duration, / ]</label>
		<shadowcolor>black</shadowcolor>
		<align>left</align>
		<include>common-FX</include>
		<visible>Player.HasMedia + Player.ShowInfo</visible>
	</control>
	<control type="label" id="1">
		<description>Playlist</description>
		<width>100</width>
		<posx>660</posx>
		<posy>528</posy>
		<font>font10</font>
		<label>$INFO[musicplayer.Playlistposition,Track ]$INFO[musicplayer.Playlistlength, / ]</label>
		<shadowcolor>black</shadowcolor>
		<align>right</align>
		<include>common-FX</include>
		<visible>Player.HasMedia + Player.ShowInfo</visible>
	</control>

	</controls>
</window>