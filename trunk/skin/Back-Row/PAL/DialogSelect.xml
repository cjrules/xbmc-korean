<window>
	<id>2000</id>
	<defaultcontrol>3</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>dialog-effect</include> 
	<controls>

<controlgroup>
<animation effect="slide" time="600" start="650,0" end="0,0" acceleration="-1" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
<animation effect="slide" time="600" start="0,0" end="730,0" acceleration="-1" condition="!Skin.HasSetting(animated)">WindowClose</animation>

<control type="image">
		<description>backgorund</description>
		<posx>-2</posx>
		<posy>0</posy>
		<width>726</width>
		<height>578</height>
		<texture>blackgloss.png</texture>
		<aspectratio>stretch</aspectratio>
		</control>

	<control>
		<description>IMDB</description>
		<type>button</type>
		<id>5</id>
		<posx>30</posx>
		<posy>80</posy>
		<width>115</width>
		<label>368</label>
		<align>center</align>
		<texturefocus>button-focus.png</texturefocus>
		<texturenofocus>button-nofocus.png</texturenofocus>
		<onleft>3</onleft>
		<onright>3</onright>
		<onup>3</onup>
