		<width>726</width>
		<height>578</height>
		<texture>blackgloss.png</texture>
		<aspectratio>stretch</aspectratio>
		</control>

	<control>
		<description>IMDB</description>
		<type>button</type>
		<id>5</id>
		<posx>30</posx>
		<posy>80</posy>
		<width>115</width>
