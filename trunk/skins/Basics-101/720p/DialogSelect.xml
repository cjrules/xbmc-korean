<window type="dialog" id="2000">
	<defaultcontrol always="true">3</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>240</posx>
		<posy>100</posy>
	</coordinates>
	<include>dialogeffect</include>
	<controls>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>800</width>
			<height>510</height>
			<colordiffuse>AAFFFFFF</colordiffuse>
			<texture border="6">dialog_background.png</texture>
		</control>
		<control type="image">
			<description>background image</description>
			<posx>5</posx>
			<posy>5</posy>
			<width>790</width>
			<height>500</height>
			<colordiffuse>EFFFFFFF</colordiffuse>
			<texture>menu_back.png</texture>
			<aspectratio>scale</aspectratio>
		</control>
		<control type="label" id="1">
			<description>heading label</description>
			<posx>20</posx>
			<posy>10</posy>
			<width>420</width>
			<align>left</align>
			<font>font16</font>
			<label>-</label>
			<textcolor>red</textcolor>
			<shadowcolor>black</shadowcolor>
		</control>
		<control type="group">
			<posx>755</posx>
			<posy>50</posy>
			<control type="button">
				<posx>0</posx>
				<posy>0</posy>
				<width>30</width>
				<height>30</height>
				<onclick>PageUp(60)</onclick>
				<texturefocus>scrollbar_arrow_up_focus.png</texturefocus>
				<texturenofocus>scrollbar_arrow_up.png</texturenofocus>
				<visible>Control.IsVisible(60)</visible>
			</control>
			<control type="scrollbar" id="60">
				<posx>0</posx>
				<posy>35</posy>
				<width>30</width>
				<height>325</height>
				<texturesliderbackground>button-nofocus.png</texturesliderbackground>
				<texturesliderbar>scrollbar_bar.png</texturesliderbar>
				<texturesliderbarfocus>scrollbar_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<onleft>3</onleft>
				<onright>5</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
			<control type="button">
				<posx>0</posx>
				<posy>365</posy>
				<width>30</width>
				<height>30</height>
				<onclick>PageDown(60)</onclick>
				<texturefocus>scrollbar_arrow_down_focus.png</texturefocus>
				<texturenofocus>scrollbar_arrow_down.png</texturenofocus>
				<visible>Control.IsVisible(60)</visible>
			</control>
		</control>
		<control type="list" id="3">
			<posx>15</posx>
			<posy>50</posy>
			<width>730</width>
			<height>400</height>
			<onleft>5</onleft>
			<onright>60</onright>
			<onup>3</onup>
			<ondown>3</ondown>
			<pagecontrol>60</pagecontrol>
			<scrolltime>200</scrolltime>
			<animation effect="slide" start="0,0" end="20,0" time="0" condition="!Control.IsVisible(60)">Conditional</animation>
			<itemlayout height="50">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>730</width>
					<height>45</height>
					<colordiffuse>FFFFFFFF</colordiffuse>
					<texture>button-nofocus.png</texture>
				</control>
				<control type="label">
					<posx>15</posx>
					<posy>5</posy>
					<width>700</width>
					<height>35</height>
					<font>font13</font>
					<aligny>center</aligny>
					<selectedcolor>red</selectedcolor>
					<align>left</align>
					<info>ListItem.Label</info>
				</control>
			</itemlayout>
			<focusedlayout height="50">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>730</width>
					<height>45</height>
					<colordiffuse>FFFFFFFF</colordiffuse>
					<visible>!Control.HasFocus(3)</visible>
					<texture>button-nofocus.png</texture>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>770</width>
					<height>45</height>
					<colordiffuse>FFFFFFFF</colordiffuse>
					<visible>Control.HasFocus(3)</visible>
					<texture>button-focus.png</texture>
				</control>
				<control type="label">
					<posx>15</posx>
					<posy>5</posy>
					<width>700</width>
					<height>35</height>
					<font>font13</font>
					<aligny>center</aligny>
					<selectedcolor>red</selectedcolor>
					<align>left</align>
					<info>ListItem.Label</info>
				</control>
			</focusedlayout>
		</control>
		<control type="button" id="5">
			<description>OK Button</description>
			<posx>300</posx>
			<posy>455</posy>
			<width>200</width>
			<height>42</height>
			<font>font13</font>
			<align>center</align>
			<texturefocus>button-focus.png</texturefocus>
			<texturenofocus>button-nofocus.png</texturenofocus>
			<label>186</label>
			<onleft>3</onleft>
			<onright>3</onright>
			<onup>3</onup>
			<ondown>3</ondown>
		</control>
	</controls>
</window>