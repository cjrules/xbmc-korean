		<control type="label" id="21">
			<description>Artist Label</description>
			<posx>40</posx>
			<posy>25</posy>
			<width>640</width>
			<label>-</label>
			<font>home</font>
			<textcolor>main-text</textcolor>
			<align>center</align>
			<scroll>true</scroll>
			<animation effect="fade" start="0" delay="250" time="200">WindowOpen</animation>
			<animation effect="fade" end="0" time="20">WindowClose</animation>
		</control>
		<control type="label" id="20">
			<description>Album Label</description>
			<posx>40</posx>
			<posy>478</posy>
			<width>640</width>
			<label>-</label>
			<font>home</font>
			<textcolor>main-text</textcolor>
			<align>center</align>
			<scroll>true</scroll>
			<animation effect="fade" start="0" delay="250" time="200">WindowOpen</animation>
			<animation effect="fade" end="0" time="20">WindowClose</animation>
