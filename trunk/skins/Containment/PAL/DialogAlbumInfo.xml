			<posx>320</posx>
			<posy>135</posy>
			<width>380</width>
			<label>-</label>
			<font>font13</font>
			<textcolor>button-nofocus-text</textcolor>
		</control>
		<control type="fadelabel" id="24">
			<description>genre value</description>
