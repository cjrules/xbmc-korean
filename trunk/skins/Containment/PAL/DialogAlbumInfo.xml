<window id="2001">
	<defaultcontrol>5</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<control type="multiimage">
			<description>background animation</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<info>Skin.String(custom-ani)</info>
			<timeperimage>2</timeperimage>
			<visible>Skin.string(custom-ani)</visible>
		</control>
		<control type="image" id="102">
			<description>Custom background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<info>Skin.String(custom-background)</info>
			<visible>Skin.String(custom-background)</visible>
			<visible>!Skin.String(custom-ani)</visible>
		</control>
		<control type="image" id="103">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>background.png</texture>
			<visible>!Skin.String(custom-background)</visible>
			<visible>!Skin.String(custom-ani)</visible>
		</control>
		<control type="image">
			<description>Custom background image with vis\video</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<info>Skin.String(custom-background)</info>
			<colordiffuse>88FFFFFF</colordiffuse>
			<visible>![Control.IsVisible(102) | Control.IsVisible(103)]</visible>
		</control>
		<control type="image">
			<description>background image with vis\video</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>background.png</texture>
			<colordiffuse>88FFFFFF</colordiffuse>
			<visible>![Control.IsVisible(102) | Control.IsVisible(103)]</visible>
		</control>
		<include>Container</include>
		<control type="group">
			<include>media-slide</include>
			<control type="button" id="5">
				<description>tracks/review</description>
				<posx>5</posx>
				<posy>110</posy>
				<label>206</label>
				<onleft>4</onleft>
				<onright>50</onright>
				<onup>10</onup>
				<ondown>6</ondown>
			</control>
			<control type="button" id="6">
				<description>refresh</description>
				<posx>5</posx>
				<posy>147</posy>
				<label>184</label>
				<onleft>4</onleft>
				<onright>50</onright>
				<onup>5</onup>
				<ondown>10</ondown>
			</control>
			<control type="button" id="10">
				<description>Get Thumb</description>
				<posx>5</posx>
				<posy>184</posy>
				<label>13405</label>
				<onleft>4</onleft>
				<onright>50</onright>
				<onup>6</onup>
				<ondown>5</ondown>
			</control>
			<control type="image" id="3">
				<description>Album Cover</description>
				<posx>5</posx>
				<posy>245</posy>
				<width>140</width>
				<height>210</height>
				<texture>-</texture>
				<aspectratio>keep</aspectratio>
			</control>
		</control>
		<control type="label">
			<description>release date label</description>
			<posx>200</posx>
			<posy>110</posy>
			<label>$LOCALIZE[20339]:</label>
			<font>font13</font>
			<textcolor>main-text</textcolor>
		</control>
		<control type="label">
			<description>rating label</description>
			<posx>200</posx>
			<posy>135</posy>
			<label>$LOCALIZE[563]:</label>
			<font>font13</font>
			<textcolor>main-text</textcolor>
		</control>
		<control type="label">
			<description>genre label</description>
			<posx>200</posx>
			<posy>160</posy>
			<label>$LOCALIZE[515]:</label>
