		<control type="fadelabel" id="25">
			<description>tones value</description>
			<posx>320</posx>
			<posy>185</posy>
			<width>380</width>
			<label>-</label>
			<font>font13</font>
			<textcolor>button-nofocus-text</textcolor>
		</control>
		<control type="fadelabel" id="26">
			<description>styles value</description>
