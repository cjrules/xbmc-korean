<window id="2000">
	<defaultcontrol>3</defaultcontrol>
	<controls>
		<include>Dialog-Container</include>
		<control type="group">
			<include>dialog-slide</include>
			<control type="label" id="1">
				<description>Heading Label</description>
				<posx>5</posx>
				<posy>110</posy>
				<width>365</width>
				<align>left</align>
				<label>181</label>
				<font>font14</font>
				<textcolor>main-text</textcolor>
			</control>
			<control type="list" id="3">
				<posx>5</posx>
				<posy>140</posy>
				<width>365</width>
				<height>340</height>
				<onleft>5</onleft>
				<onright>5</onright>
				<onup>3</onup>
				<ondown>3</ondown>
				<scrolltime>200</scrolltime>
				<itemlayout height="32">
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>365</width>
						<height>30</height>
						<font>font13</font>
						<align>left</align>
						<scroll>true</scroll>
						<aligny>center</aligny>
						<textcolor>button-nofocus-text</textcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="32">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>365</width>
						<height>30</height>
						<texture>line.png</texture>
						<colordiffuse>object-color</colordiffuse>
						<visible>Control.HasFocus(3)</visible>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>365</width>
						<height>30</height>
						<font>font13</font>
						<align>left</align>
						<scroll>true</scroll>
						<aligny>center</aligny>
						<textcolor>main-text</textcolor>
						<selectedcolor>selected-text</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</focusedlayout>
			</control>
			<control type="button" id="5">
				<description>imdb Button</description>
				<posx>365</posx>
				<posy>0</posy>
				<width>100</width>
				<align>center</align>
				<label>368</label>
				<onleft>3</onleft>
				<onright>3</onright>
				<onup>3</onup>
				<ondown>3</ondown>
			</control>
		</control>
		<include>Dialog-Shutters</include>
	</controls>
</window>