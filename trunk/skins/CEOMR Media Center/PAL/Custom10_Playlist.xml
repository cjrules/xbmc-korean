			<control type="label">
				<description>Startup Playlist Path label</description>
				<posx>285</posx>
				<posy>346</posy>
				<width>300</width>
				<align>left</align>
				<aligny>center</aligny>
				<scroll>true</scroll>
				<info>Skin.String(Startup_Playlist_Path)</info>
				<enable>Skin.HasSetting(Use_Startup_Playlist)</enable>
			</control>


</controls>

</window>