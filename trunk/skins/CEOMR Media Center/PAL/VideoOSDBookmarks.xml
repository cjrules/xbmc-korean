<window id="125">

  <defaultcontrol>2</defaultcontrol>

   <animation effect="fade" time="400">WindowOpen</animation> 
   <animation effect="fade" time="400">WindowClose</animation>

  <controls>
    <control type="image" id="1">
      <description>background image</description>
      <posx>272</posx>
      <posy>223</posy>
      <width>370</width>
      <height>200</height>
      <texture>osd_menu_bg.png</texture>
    </control>

    <control type="label" id="1">
      <description>Settings Label</description>
      <posx>300</posx>
      <posy>200</posy>
      <label>13398</label>
      <align>center</align>
      <font>font12</font>
    </control>

    <control type="button" id="2">
      <description>Create Bookmark button</description>
      <posx>290</posx>
      <posy>240</posy>
      <width>165</width>
      <height>35</height>
      <font>font13</font>
      <textoffsetx>12</textoffsetx>
      <label>294</label>
      <onleft>3</onleft>
      <onright>3</onright>
      <ondown>11</ondown>
      <onup>11</onup>
    </control>

    <control type="button" id="3">
      <description>Clear Bookmarks button</description>
      <posx>460</posx>
      <posy>240</posy>
      <width>165</width>
      <height>35</height>
      <font>font12</font>
      <label>296</label>
      <onleft>2</onleft>
      <onright>2</onright>
      <ondown>11</ondown>
      <onup>11</onup>
    </control>

    <control type="thumbnailpanel" id="11">
      <description>Bookmarks thumbnail panel</description>
      <aspectratio>keep</aspectratio>
      <posx>310</posx>
      <posy>280</posy>
      <width>300</width>
      <height>120</height>
      <spinposx>275</spinposx>
      <spinposy>110</spinposy>
      <itemwidth>100</itemwidth> 
      <itemheight>110</itemheight>
      <texturewidth>90</texturewidth>
      <textureheight>80</textureheight>
      <thumbwidth>80</thumbwidth>
      <thumbheight>70</thumbheight>
      <thumbposx>5</thumbposx>
      <thumbposy>5</thumbposy>
      <onleft>2</onleft>
      <onright>3</onright>
      <ondown>2</ondown>
      <onup>2</onup>
    </control>

  </controls>
  
</window>