    <control type="image" id="1">
      <description>background image</description>
      <posx>0</posx>
      <posy>0</posy>
      <width>512</width>
      <height>512</height>
      <texture>background-filebrowser.png</texture>
    </control>

    <control type="label" id="411">
      <description>heading label</description>
      <posx>50</posx>
      <posy>10</posy>
