			<textureslidernibfocus>scrollbar_nib_focus.png</textureslidernibfocus>
			<onleft>450</onleft>
			<onright>9000</onright>
			<onup>60</onup>
			<ondown>60</ondown>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
		</control>

		<control type="list" id="450">
			<posx>25</posx>
			<posy>47</posy>
			<width>440</width>
			<height>340</height>
