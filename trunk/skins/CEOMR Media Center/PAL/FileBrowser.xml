			<onright>60</onright>
			<onup>450</onup>
			<ondown>450</ondown>
			<pagecontrol>60</pagecontrol>
			<scrolltime>200</scrolltime>
			<itemlayout height="30">
				<control type="image">
					<width>430</width>
					<height>28</height>
					<posx>0</posx>
					<posy>0</posy>
					<texture>list-nofocus.png</texture>
				</control>
				<control type="image">
					<posx>5</posx>
					<posy>3</posy>
					<width>22</width>
					<height>22</height>
					<info>ListItem.Icon</info>
				</control>
				<control type="label">
					<posx>30</posx>
					<posy>0</posy>
					<width>430</width>
					<height>28</height>
					<font>font13</font>
					<aligny>center</aligny>
					<selectedcolor>FFD2FF00</selectedcolor>
					<textcolor>ffffffff</textcolor>
					<align>left</align>
					<info>ListItem.Label</info>
					<visible>!Container.Sort(SongRating)</visible>
				</control>
			</itemlayout>
			<focusedlayout height="31">
				<control type="image">
					<width>430</width>
					<height>28</height>
					<posx>0</posx>
					<posy>0</posy>
					<visible>!Control.HasFocus(450)</visible>
					<texture>list-nofocus.png</texture>
				</control>
				<control type="image">
					<width>430</width>
					<height>28</height>
					<posx>0</posx>
					<posy>0</posy>
					<visible>Control.HasFocus(450)</visible>
					<texture>list-focus.png</texture>
				</control>
				<control type="image">
					<posx>5</posx>
					<posy>3</posy>
					<width>22</width>
					<height>22</height>
					<info>ListItem.Icon</info>
				</control>
				<control type="label">
					<posx>30</posx>
					<posy>0</posy>
					<width>430</width>
					<height>28</height>
					<font>font13</font>
					<aligny>center</aligny>
					<selectedcolor>FFD2FF00</selectedcolor>
					<textcolor>ffffffff</textcolor>
					<align>left</align>
					<info>ListItem.Label</info>
					<visible>!Container.Sort(SongRating)</visible>
				</control>
			</focusedlayout>
		</control>

