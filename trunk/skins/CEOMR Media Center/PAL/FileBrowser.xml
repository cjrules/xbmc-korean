  <allowoverlay>yes</allowoverlay>
  <coordinates>
    <system>1</system>
    <posx>120</posx>
    <posy>50</posy>
  </coordinates>
  <animation effect="fade" time="400">WindowOpen</animation>
  <animation effect="fade" time="400">WindowClose</animation>
  <controls>

	<control type="image" id="1">
	  <posx>-120</posx>
      	  <posy>-50</posy>
	  <width>720</width>
