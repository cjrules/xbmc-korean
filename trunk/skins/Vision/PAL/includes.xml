<includes>
	<include file="Defaults.xml"/>
	<include file="CommonViews.xml"/>
	<include file="CommonLibraryViews.xml"/>
	<include file="TextColor.xml"/>
	<include name="CommonBackground">
		<control type="videowindow">
			<description>Video Preview</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<aspectratio>scale</aspectratio>
			<visible>Player.HasVideo + !Skin.HasSetting(Background_Video)</visible>
		</control>
		<control type="image">
			<description>videowindow Overlay</description>
			<texture>Background2.png</texture>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<visible>Player.HasVideo + !Skin.HasSetting(Background_Video)</visible>
		</control>
		<control type="visualisation">
			<description>visualisation</description>
			<posx>100</posx>
			<posy>200</posy>
			<width>620</width>
			<height>376</height>
			<visible>Player.HasAudio + !Skin.HasSetting(Background_Vis)</visible>
		</control>
		<control type="image">
			<description>background media image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>background3.png</texture>
			<visible>Player.HasAudio + !Skin.HasSetting(Background_Vis)</visible>
		</control>
		<control type="image">
			<description>background no media image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>background.png</texture>
			<visible>![Player.HasVideo + !Skin.HasSetting(Background_Video)] + ![Player.HasAudio + !Skin.HasSetting(Background_Vis)]</visible>
		</control>
		<control type="image">
			<description>background Cover</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>586</height>
			<texture>Blackground.png</texture>
		</control>
	</include>
	<include name="CommonBackground_FullscreenDialogs">
		<control type="image">
			<description>background</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>background.png</texture>
		</control>
		<control type="image">
			<description>background Cover</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>586</height>
			<texture>Blackground.png</texture>
		</control>
	</include>
	<include name="Number_of_Files_Count">
		<control type="label" id="12">
			<description>number of files text label</description>
			<posx>530</posx>
			<posy>540</posy>
			<width>200</width>
			<label>-</label>
			<font>font18</font>
			<align>right</align>
			<include>textcolor-blue</include>
			<visible>!Skin.HasSetting(Show_Object_Count)</visible>
		</control>
	</include>
	<include name="MusicNowPlayingDisplay">
		<control type="group">
			<posx>30</posx>
			<posy>39</posy>
			<visible>Player.HasAudio</visible>
			<control type="image">
				<description>ListItem Thumb</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>80</width>
				<height>63</height>
				<aspectratio align="left">keep</aspectratio>
				<info>MusicPlayer.Cover</info>
				<texture diffuse="Music_Cover_Diffuse.png" />
			</control>
			<control type="label">
				<description>Title label</description>
				<posx>65</posx>
				<posy>2</posy>
				<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
				<font>font14_NoBold</font>
				<include>textcolor-grey</include>
			</control>
			<control type="label">
				<description>Artist label</description>
				<posx>65</posx>
				<posy>22</posy>
				<label>$INFO[MusicPlayer.Artist] - $INFO[MusicPlayer.Title]</label>
				<font>font18</font>
				<include>textcolor-grey</include>
			</control>
			<control type="label">
				<description>Time label</description>
				<posx>65</posx>
				<posy>45</posy>
				<label>$INFO[MusicPlayer.Album]</label>
				<font>font14_NoBold</font>
				<include>textcolor-grey</include>
			</control>
		</control>
	</include>
	<include name="Slider_Glow_Common">
		<control type="image">
			<description>Sidebar Glow image</description>
			<posx>40</posx>
			<posy>0</posy>
			<width>77</width>
			<height>577</height>
			<texture>BlueGlow.png</texture>
			<animation effect="slide" time="100" end="160,0" condition="ControlGroup(9000).HasFocus()">Conditional</animation>
			<animation effect="fade" time="1500" start="100" end="70" pulse="true" condition="true">Conditional</animation>
		</control>
	</include>
	<include name="SlideBarClock">
		<control type="group">
			<posx>20</posx>
			<posy>500</posy>
			<visible>!Skin.HasSetting(SidebarClock)</visible>
			<control type="image">
				<description>Border image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>140</width>
				<height>50</height>
				<texture border="6">toast-panel-bg2.png</texture>
			</control>
			<control type="label">
				<description>Time text label</description>
				<posx>10</posx>
				<posy>10</posy>
				<width>120</width>
				<align>center</align>
				<info>System.Time</info>
				<font>font22</font>
				<include>textcolor-white</include>
			</control>
		</control>
	</include>
	<include name="SlideBarWeather">
		<control type="group">
			<posx>20</posx>
			<posy>405</posy>
			<visible>!Skin.HasSetting(SidebarWeather)</visible>
			<animation effect="slide" time="0" end="0,50" condition="Skin.HasSetting(SidebarClock)">Conditional</animation>
			<control type="image">
				<description>Border image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>140</width>
				<height>95</height>
				<texture border="6">toast-panel-bg3.png</texture>
			</control>
			<control type="image">
				<description>Weather image</description>
				<posx>10</posx>
				<posy>10</posy>
				<width>64</width>
				<height>64</height>
				<info>Weather.Conditions</info>
				<aspectratio align="left">keep</aspectratio>
				<visible>Weather.IsFetched</visible>
				<animation effect="fade" time="200">VisibleChange</animation>
			</control>
			<control type="label">
				<description>Temp label</description>
				<posx>125</posx>
				<posy>30</posy>
				<align>right</align>
				<info>Weather.Temperature</info>
				<font>font20</font>
				<include>textcolor-white</include>
				<visible>Weather.IsFetched</visible>
			</control>
			<control type="label">
				<description>Condidtions label</description>
				<posx>10</posx>
				<posy>70</posy>
				<width>120</width>
				<align>center</align>
				<info>Weather.Conditions</info>
				<font>font13</font>
				<scroll>true</scroll>
				<include>textcolor-white</include>
				<visible>Weather.IsFetched</visible>
			</control>
		</control>
	</include>
	<include name="HomePageWeather">
		<control type="group">
			<posx>560</posx>
			<posy>15</posy>
			<visible>Weather.IsFetched</visible>
			<visible>Skin.HasSetting(HomeWeather)</visible>
			<animation effect="fade" time="200">VisibleChange</animation>
			<control type="image">
				<description>Border image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>140</width>
				<height>95</height>
				<texture border="6">toast-panel-bg3.png</texture>
			</control>
			<control type="image">
				<description>Weather image</description>
				<posx>10</posx>
				<posy>10</posy>
				<width>64</width>
				<height>64</height>
				<info>Weather.Conditions</info>
				<aspectratio align="left">keep</aspectratio>
				<animation effect="fade" time="200">VisibleChange</animation>
			</control>
			<control type="label">
				<description>Temp label</description>
				<posx>125</posx>
				<posy>30</posy>
				<align>right</align>
				<info>Weather.Temperature</info>
				<font>font20</font>
				<include>textcolor-white</include>
			</control>
			<control type="label">
				<description>Condidtions label</description>
				<posx>10</posx>
				<posy>70</posy>
				<width>120</width>
				<align>center</align>
				<info>Weather.Conditions</info>
				<font>font13</font>
				<scroll>true</scroll>
				<include>textcolor-white</include>
			</control>
		</control>
	</include>
	<include name="Slide_From_Left_Animation">
		<animation effect="slide" time="300" start="-720,0" end="0,0" acceleration="-1.1" delay="0" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
		<animation effect="slide" time="300" start="0,0" end="-720,0" acceleration="1.3" delay="0" condition="!Skin.HasSetting(animated)">WindowClose</animation>
	</include>
	<include name="Slide_From_Right_Animation">
		<animation effect="slide" time="300" start="720,0" end="0,0" acceleration="-1.1" delay="0" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
		<animation effect="slide" time="300" start="0,0" end="720,0" acceleration="1.3" delay="0" condition="!Skin.HasSetting(animated)">WindowClose</animation>
	</include>
	<include name="Fade_Window_OpenClose_Animation">
		<animation effect="fade" start="100" end="0" time="300" condition="!Skin.HasSetting(animated)">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="300" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
	</include>
	<include name="Fade_Dialog_OpenClose_Animation">
		<animation effect="fade" start="100" end="0" time="200" condition="!Skin.HasSetting(animated)">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="200" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
	</include>
	<include name="Fade_List_FocusUnfocus_Animation">
		<animation effect="fade" start="50" end="100" time="100">Focus</animation>
		<animation effect="fade" start="100" end="50" time="100">UnFocus</animation>
	</include>
	<include name="HomeMediaInfo">
		<control type="group">
			<posx>30</posx>
			<posy>450</posy>
			<visible>Player.HasMedia</visible>
			<animation effect="fade" time="200">VisibleChange</animation>
			<animation effect="slide" time="500" start="-600,0" end="0,0" acceleration="-1.1" delay="0" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
			<animation effect="slide" time="500" start="0,0" end="-600,0" acceleration="-1.3" delay="0" condition="!Skin.HasSetting(animated)">WindowClose</animation>
			<control type="image">
				<description>RW Image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>50</width>
				<height>50</height>
				<aspectratio align="right">keep</aspectratio>
				<texture>music-rewind.png</texture>
				<visible>Player.Rewinding</visible>
			</control>
			<control type="image">
				<description>FF Image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>50</width>
				<height>50</height>
				<aspectratio align="right">keep</aspectratio>
				<texture>music-forward.png</texture>
				<visible>Player.Forwarding</visible>
			</control>
			<control type="image">
				<description>Paused Image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>50</width>
				<height>50</height>
				<aspectratio align="right">keep</aspectratio>
				<texture>music-pause.png</texture>
				<visible>Player.Paused</visible>
			</control>
			<control type="image">
				<description>Play Image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>50</width>
				<height>50</height>
				<aspectratio align="right">keep</aspectratio>
				<texture>music-play.png</texture>
				<visible>Player.Playing</visible>
			</control>
			<control type="label">
				<description>Music Title label</description>
				<posx>60</posx>
				<posy>0</posy>
				<info>MusicPlayer.Title</info>
				<font>font14_NoBold</font>
				<visible>Player.HasAudio</visible>
			</control>
			<control type="label">
				<description>Artist label</description>
				<posx>60</posx>
				<posy>19</posy>
				<label>$INFO[MusicPlayer.Artist,, -] $INFO[MusicPlayer.Album]</label>
				<font>font14_NoBold</font>
				<visible>Player.HasAudio</visible>
			</control>
			<control type="label">
				<description>Video Title label</description>
				<posx>60</posx>
				<posy>0</posy>
				<info>VideoPlayer.Title</info>
				<font>font14_NoBold</font>
				<visible>Player.HasVideo</visible>
			</control>
			<control type="label">
				<description>Director label</description>
				<posx>60</posx>
				<posy>19</posy>
				<label>$INFO[VideoPlayer.Director]</label>
				<font>font14_NoBold</font>
				<visible>Player.HasVideo</visible>
			</control>
			<control type="label">
				<description>Time label</description>
				<posx>60</posx>
				<posy>38</posy>
				<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
				<font>font14_NoBold</font>
			</control>
		</control>
	</include>
</includes>